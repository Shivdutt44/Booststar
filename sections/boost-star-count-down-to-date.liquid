<script>
    function startCountdownBS() {

      var daysElement = document.getElementById('bse-cd-{{ section.id }}-days');
      var hoursElement = document.getElementById('bse-cd-{{ section.id }}-hours');
      var minutesElement = document.getElementById('bse-cd-{{ section.id }}-minutes');
      var secondsElement = document.getElementById('bse-cd-{{ section.id }}-seconds');

      var countdownInterval = setInterval(function () {

        var end = new Date('{{ section.settings.end_date }} 12:00 AM');

        var now = new Date();
        var distance = end - now;

        // defaults
        var _second = 1000;
        var _minute = _second * 60;
        var _hour = _minute * 60;
        var _day = _hour * 24;

        var days = Math.floor(distance / _day);
        var hours = Math.floor((distance % _day) / _hour);
        var minutes = Math.floor((distance % _hour) / _minute);
        var seconds = Math.floor((distance % _minute) / _second);

        if (hours === 0 && minutes === 0 && seconds === 0) {
          clearInterval(countdownInterval);
          return;
        }

        if (seconds === 0) {
          seconds = 59;

          if (minutes === 0) {
            minutes = 59;
            hours--;
          } else {
            minutes--;
          }
        } else {
          seconds--;
        }

        daysElement.innerText = days.toString().padStart(2, '0');
        hoursElement.innerText = hours.toString().padStart(2, '0');
        minutesElement.innerText = minutes.toString().padStart(2, '0');
        if(secondsElement) secondsElement.innerText = seconds.toString().padStart(2, '0');
      }, 1000);
    }

  startCountdownBS();

  document.addEventListener('DOMContentLoaded', startCountdownBS);

  if (Shopify.designMode) {
      document.addEventListener('shopify:section:unload', startCountdownBS);
      document.addEventListener('shopify:section:load', startCountdownBS);
  }
</script>
