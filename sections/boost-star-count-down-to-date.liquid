{% capture css %}
  
<style>
  {% if section.settings.override_fonts %}
    {{ section.settings.text_font | font_face }}
    {{ section.settings.headline_font | font_face }}
  {% endif %}

  #bse-cd-{{ section.id }} {
    background-image: {{ section.settings.background_color }};
    {% if section.settings.bg_image != blank %}
    background-image: url("{{ section.settings.bg_image | image_url }}");
    background-size: {{section.settings.bg_size}};
    {% if section.settings.parallax  %}
    background-attachment: fixed;
    {% endif %}
    background-position: {{section.settings.bg_pos}};
    {% endif %}
    margin-block: {{ section.settings.margin_block }}px;
    padding-block: {{ section.settings.padding_block }}px;
    padding-inline: {{ section.settings.padding_inline }}px;
  }

  #bse-cd-{{ section.id }} .bse-cd-headline p {
    font-size: {{ section.settings.text_size }}px;
    {% if section.settings.override_fonts %}
      font-family: {{ section.settings.text_font.family }}, {{ section.settings.text_font.fallback_families }};
      font-weight: {{ section.settings.text_font.weight }};
    {% endif %}
    color: {{ section.settings.text_color }};
    line-height: 1.15;
    margin: 0;
    padding: 0 0 25px 0;
    text-align: {{ section.settings.text_alignment }};
  }

  #bse-cd-{{ section.id }} .bse-cd-headline h2 {
    font-size: {{ section.settings.headline_size }}px;
    {% if section.settings.override_fonts %}
      font-family: {{ section.settings.headline_font.family }}, {{ section.settings.headline_font.fallback_families }};
      font-weight: {{ section.settings.headline_font.weight }};
    {% endif %}
    color: {{ section.settings.headline_color }};
    line-height: 1.15;
    margin: 0;
    padding: 0 0 5px 0;
    text-align: {{ section.settings.text_alignment }};
  }

  #bse-cd-{{ section.id }} .bse-cd {
    display: block;
    position: relative;
    margin: 0 auto;
    max-width: {{ section.settings.max_width }}px;
    align-items: center;
  }

  #bse-cd-{{ section.id }} .bse-cd-grid-item {
    background-image: {{ section.settings.countdown_background_color }};
    padding: 20px;
    text-align: center;
    border-radius: {{ section.settings.media_radius }}px;
    {% if section.settings.media_shadow %}box-shadow: 0 0 5px 0 rgba(0,0,0,0.20);{% endif %}
    background : {{ section.settings.number_bg }};
    border : 2px solid {{ section.settings.number_border_color }};
    padding : {{ section.settings.number_padding }}px;
  }

  #bse-cd-{{ section.id }} .sp-timer {
    font-size: {{ section.settings.timer_size }}px;
    font-weight: bold;
    color: {{ section.settings.timer_color }};
  }

  #bse-cd-{{ section.id }} .sp-label {
    font-size: {{ section.settings.text_size }}px;
    font-weight: bold;
    color: {{ section.settings.timer_color }};
    display: block;
  }

  #bse-cd-{{ section.id }} .bse-cd-wrapper {
    position: relative;
    padding: 10px;
    margin: 0;
  }

  #bse-cd-{{ section.id }} .bse-cd-wrapper * {
    box-sizing: border-box;
  }

  #bse-cd-{{ section.id }} .bse-cd-grid {
    display: grid;
    margin: 0 auto;
    gap: {{ section.settings.grid_gap }}px;
  }

  @media only screen and (min-width: 801px) {
    #bse-cd-{{ section.id }} .bse-cd-grid {
      grid-auto-columns: 1fr;
      grid-auto-flow: column;
    }
  }

  @media only screen and (max-width: 800px) {
    #bse-cd-{{ section.id }} .bse-cd-grid {
      grid-template-columns: 1fr 1fr;
      gap: 10px;
    }
  }

  #bse-cd-{{ section.id }} .bse-cd-wrapper h2 {
    font-weight: bold;
    font-size: 22pt;
    margin: 0 0 25px 0;
    padding: 0;
  }

  #bse-cd-{{ section.id }} .bse-cd-wrapper p {
    font-size: 13pt;
    margin: 0 0 25px 0;
    padding: 0;
  }
</style>
 {% endcapture %} 
 {{ css | strip_newlines }}

{% capture html %}

<!-- start content -->
<section id="bse-cd-{{ section.id }}" class="bse-cd-wrapper">
  <section class="bse-cd" sp-container>
    <div class="bse-cd-headline">
      {% if section.settings.headline %}
        <h2>{{ section.settings.headline }}</h2>
      {% endif %}
      {% if section.settings.text %}
        <p>{{ section.settings.text }}</p>
      {% endif %}
    </div>

    <div class="bse-cd-grid">
      <div class="bse-cd-grid-item">
        <div class="bse-cd">
          <span id="bse-cd-{{ section.id }}-days" class="sp-timer">00</span>
          <span class="sp-label">Days</span>
        </div>
      </div>
      <div class="bse-cd-grid-item">
        <div class="bse-cd">
          <span id="bse-cd-{{ section.id }}-hours" class="sp-timer">00</span>
          <span class="sp-label">Hrs</span>
        </div>
      </div>
      <div class="bse-cd-grid-item">
        <div class="bse-cd">
          <span id="bse-cd-{{ section.id }}-minutes" class="sp-timer">00</span>
          <span class="sp-label">Mins</span>
        </div>
      </div>
      <div
        class="bse-cd-grid-item"
        {% if section.settings.show_seconds == false %}
          style="display:none;"
        {% endif %}
      >
        <div class="bse-cd">
          <span id="bse-cd-{{ section.id }}-seconds" class="sp-timer">00</span>
          <span class="sp-label">Secs</span>
        </div>
      </div>
    </div>
  </section>
</section>

