{% comment %}
  Student Resume Section - Dynamic
  Uses metaobjects for student data
{% endcomment %}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
 
        

<div class="student-resume-section" id="student-resume-{{ section.id }}">
  <!-- Navigation Menu -->
  <nav class="nav-menu" id="main-nav-{{ section.id }}">
    <div class="nav-close" id="nav-close-{{ section.id }}">
      <i class="fas fa-times"></i>
    </div>
    <ul class="nav-list">
      <li class="nav-item">
        <a href="#profile-{{ section.id }}" class="nav-link">
          <i class="fas fa-user"></i> Profile
        </a>
      </li>
      <li class="nav-item">
        <a href="#contact-{{ section.id }}" class="nav-link">
          <i class="fas fa-address-book"></i> Contact
        </a>
      </li>
      <li class="nav-item">
        <a href="#about-{{ section.id }}" class="nav-link">
          <i class="fas fa-info-circle"></i> About
        </a>
      </li>
      <li class="nav-item">
        <a href="#skills-{{ section.id }}" class="nav-link">
          <i class="fas fa-cogs"></i> Skills
        </a>
      </li>
      <li class="nav-item">
        <a href="#certifications-{{ section.id }}" class="nav-link">
          <i class="fas fa-certificate"></i> Certifications
        </a>
      </li>
      <li class="nav-item">
        <a href="#testimonials-{{ section.id }}" class="nav-link">
          <i class="fas fa-comments"></i> Testimonials
        </a>
      </li>
      <li class="nav-item">
        <a href="#portfolio-{{ section.id }}" class="nav-link">
          <i class="fas fa-briefcase"></i> Portfolio
        </a>
      </li>
    </ul>
  </nav>
  <div class="overlay" id="overlay-{{ section.id }}"></div>
  
  <div class="resume-container" id="resume-content-{{ section.id }}">
    <!-- Hero Section -->
    <section id="profile-{{ section.id }}" class="hero-section">
      <!-- Decorative shapes -->
      <div class="decor-shape decor-shape-1"></div>
      <div class="decor-shape decor-shape-2"></div>
      
      <!-- Hero band -->
      <div class="hero-band"></div>
      
      <!-- Menu icon -->
      <div class="menu-icon" id="menu-toggle-{{ section.id }}">
        <span></span>
        <span></span>
        <span></span>
      </div>
      
      <!-- Profile section -->
      <div class="profile-section">
        <div class="profile-pic">
          {% if section.settings.student_image %}
            <img src="{{ section.settings.student_image | img_url: '400x400' }}" alt="{{ section.settings.student_name | escape }} — {{ section.settings.student_role | escape }}">
          {% else %}
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
          {% endif %}
        </div>
        <div class="profile-info">
          <h1 class="resume-name">{{ section.settings.student_name }}</h1>
          <p class="resume-role">{{ section.settings.student_role }}</p>
          <div class="hero-divider"></div>
          <div class="cert-pill">{{ section.settings.certification }}</div>
          <p class="hero-dates">{{ section.settings.internship_dates }}</p>
        </div>
      </div>
    </section>
    
    <!-- Contact Section -->
    <section id="contact-{{ section.id }}" class="contact-section">
      <div class="contact-grid">
        <div class="contact-item" data-contact="phone">
          <div class="contact-icon">
            <i class="fas fa-phone"></i>
          </div>
          <div class="contact-text">{{ section.settings.phone }}</div>
        </div>
        <div class="contact-item" data-contact="location">
          <div class="contact-icon">
            <i class="fas fa-map-marker-alt"></i>
          </div>
          <div class="contact-text">{{ section.settings.location }}</div>
        </div>
        <div class="contact-item" data-contact="email">
          <div class="contact-icon">
            <i class="fas fa-envelope"></i>
          </div>
          <div class="contact-text">{{ section.settings.email }}</div>
        </div>
        <div class="contact-item" data-contact="linkedin">
          <div class="contact-icon">
            <i class="fab fa-linkedin"></i>
          </div>
          <div class="contact-text">LinkedIn</div>
        </div>
      </div>
    </section>
    
    <!-- About Section -->
    <section id="about-{{ section.id }}" class="about-section" >
      <div class="about-wrap">
        <div class="about-bubble">
          <h2 class="about-heading">About Me</h2>
          <p class="about-paragraph" data-about-full="{{ section.settings.about_full }}">{{ section.settings.about_short }}</p>
          <button class="read-more" id="read-more-btn-{{ section.id }}">Read More</button>
        </div>
      </div>
    </section>
    
    <!-- Skills Section -->
    <section id="skills-{{ section.id }}" class="skills-section">
      <h2 class="section-heading">My Skills</h2>
      <div class="skills-container">
        {% if section.settings.skill_1_name != blank %}
          <div class="skill-item">
            <div class="skill-header">
              <span class="skill-label">{{ section.settings.skill_1_name }}</span>
              <span class="skill-percentage">{{ section.settings.skill_1_percentage }}%</span>
            </div>
            <div class="skill-bar">
              <div class="skill-fill" style="width: {{ section.settings.skill_1_percentage }}%; background-color: #97ba54;"></div>
            </div>
          </div>
        {% endif %}
        
        {% if section.settings.skill_2_name != blank %}
          <div class="skill-item">
            <div class="skill-header">
              <span class="skill-label">{{ section.settings.skill_2_name }}</span>
              <span class="skill-percentage">{{ section.settings.skill_2_percentage }}%</span>
            </div>
            <div class="skill-bar">
              <div class="skill-fill" style="width: {{ section.settings.skill_2_percentage }}%; background-color: #97ba54;"></div>
            </div>
          </div>
        {% endif %}
        
        {% if section.settings.skill_3_name != blank %}
          <div class="skill-item">
            <div class="skill-header">
              <span class="skill-label">{{ section.settings.skill_3_name }}</span>
              <span class="skill-percentage">{{ section.settings.skill_3_percentage }}%</span>
            </div>
            <div class="skill-bar">
              <div class="skill-fill" style="width: {{ section.settings.skill_3_percentage }}%; background-color: #f0d83d;"></div>
            </div>
          </div>
        {% endif %}
        
        {% if section.settings.skill_4_name != blank %}
          <div class="skill-item">
            <div class="skill-header">
              <span class="skill-label">{{ section.settings.skill_4_name }}</span>
              <span class="skill-percentage">{{ section.settings.skill_4_percentage }}%</span>
            </div>
            <div class="skill-bar">
              <div class="skill-fill" style="width: {{ section.settings.skill_4_percentage }}%; background-color: #97ba54;"></div>
            </div>
          </div>
        {% endif %}
        
        {% if section.settings.skill_5_name != blank %}
          <div class="skill-item">
            <div class="skill-header">
              <span class="skill-label">{{ section.settings.skill_5_name }}</span>
              <span class="skill-percentage">{{ section.settings.skill_5_percentage }}%</span>
            </div>
            <div class="skill-bar">
              <div class="skill-fill" style="width: {{ section.settings.skill_5_percentage }}%; background-color: #97ba54;"></div>
            </div>
          </div>
        {% endif %}
      </div>
    </section>
    
    <!-- Certifications Section -->
    <section id="certifications-{{ section.id }}" class="certifications-section">
      <h2 class="section-heading">Certifications & Highlights</h2>
      <div class="cert-card">
        <div class="cert-content">
          <h3 class="cert-heading">{{ section.settings.certification_title }}</h3>
          <ul class="cert-list">
            {% if section.settings.certification_highlight_1 != blank %}
              <li><i class="fas fa-check-circle"></i> {{ section.settings.certification_highlight_1 }}</li>
            {% endif %}
            
            {% if section.settings.certification_highlight_2 != blank %}
              <li><i class="fas fa-check-circle"></i> {{ section.settings.certification_highlight_2 }}</li>
            {% endif %}
            
            {% if section.settings.certification_highlight_3 != blank %}
              <li><i class="fas fa-check-circle"></i> {{ section.settings.certification_highlight_3 }}</li>
            {% endif %}
            
            {% if section.settings.certification_highlight_4 != blank %}
              <li><i class="fas fa-check-circle"></i> {{ section.settings.certification_highlight_4 }}</li>
            {% endif %}
            
            {% if section.settings.certification_highlight_5 != blank %}
              <li><i class="fas fa-check-circle"></i> {{ section.settings.certification_highlight_5 }}</li>
            {% endif %}
          </ul>
          <button class="cert-more" id="cert-more-btn-{{ section.id }}">Know More</button>
          <div class="cert-expanded" id="cert-expanded-{{ section.id }}" style="display: none;">
            <h4>Additional Certification Details</h4>
            <p>{{ section.settings.certification_details }}</p>
          </div>
        </div>
        <div class="cert-badge">
          {% if section.settings.certification_badge %}
            <img src="{{ section.settings.certification_badge | img_url: '200x200' }}" alt="{{ section.settings.certification_title | escape }}">
          {% else %}
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
          {% endif %}
        </div>
      </div>
    </section>
    
    <!-- Testimonials Section -->
    <section id="testimonials-{{ section.id }}" class="testimonials-section">
      <h2 class="section-heading">What My Mentor Says</h2>
      <div class="testimonials-container">
        <div class="testimonials-carousel" id="testimonials-carousel-{{ section.id }}">
          {% if section.settings.testimonial_1_mentor_name != blank %}
            <div class="testimonial-card">
              <div class="testimonial-content">
                <div class="testimonial-avatar">
                  {% if section.settings.testimonial_1_mentor_image %}
                    <img src="{{ section.settings.testimonial_1_mentor_image | img_url: '200x200' }}" alt="{{ section.settings.testimonial_1_mentor_name | escape }}">
                  {% else %}
                    {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                  {% endif %}
                </div>
                <div class="testimonial-text">
                  <p class="testimonial-quote">{{ section.settings.testimonial_1_text }}</p>
                  <div class="testimonial-stars">
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                  </div>
                  <div class="testimonial-author">{{ section.settings.testimonial_1_mentor_name }}</div>
                  <div class="testimonial-role">{{ section.settings.testimonial_1_mentor_role }}</div>
                </div>
              </div>
            </div>
          {% endif %}
          
          {% if section.settings.testimonial_2_mentor_name != blank %}
            <div class="testimonial-card">
              <div class="testimonial-content">
                <div class="testimonial-avatar">
                  {% if section.settings.testimonial_2_mentor_image %}
                    <img src="{{ section.settings.testimonial_2_mentor_image | img_url: '200x200' }}" alt="{{ section.settings.testimonial_2_mentor_name | escape }}">
                  {% else %}
                    {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                  {% endif %}
                </div>
                <div class="testimonial-text">
                  <p class="testimonial-quote">{{ section.settings.testimonial_2_text }}</p>
                  <div class="testimonial-stars">
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                  </div>
                  <div class="testimonial-author">{{ section.settings.testimonial_2_mentor_name }}</div>
                  <div class="testimonial-role">{{ section.settings.testimonial_2_mentor_role }}</div>
                </div>
              </div>
            </div>
          {% endif %}
          
          {% if section.settings.testimonial_3_mentor_name != blank %}
            <div class="testimonial-card">
              <div class="testimonial-content">
                <div class="testimonial-avatar">
                  {% if section.settings.testimonial_3_mentor_image %}
                    <img src="{{ section.settings.testimonial_3_mentor_image | img_url: '200x200' }}" alt="{{ section.settings.testimonial_3_mentor_name | escape }}">
                  {% else %}
                    {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                  {% endif %}
                </div>
                <div class="testimonial-text">
                  <p class="testimonial-quote">{{ section.settings.testimonial_3_text }}</p>
                  <div class="testimonial-stars">
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                  </div>
                  <div class="testimonial-author">{{ section.settings.testimonial_3_mentor_name }}</div>
                  <div class="testimonial-role">{{ section.settings.testimonial_3_mentor_role }}</div>
                </div>
              </div>
            </div>
          {% endif %}
        </div>
        <div class="testimonial-controls">
          <button class="testimonial-btn" id="testimonial-prev-{{ section.id }}">
            <i class="fas fa-chevron-left"></i>
          </button>
          <button class="testimonial-btn" id="testimonial-next-{{ section.id }}">
            <i class="fas fa-chevron-right"></i>
          </button>
        </div>
        <div class="testimonials-nav" id="testimonials-nav-{{ section.id }}">
          {% if section.settings.testimonial_1_mentor_name != blank %}
            <div class="testimonial-dot active" data-slide="0"></div>
          {% endif %}
          
          {% if section.settings.testimonial_2_mentor_name != blank %}
            <div class="testimonial-dot" data-slide="1"></div>
          {% endif %}
          
          {% if section.settings.testimonial_3_mentor_name != blank %}
            <div class="testimonial-dot" data-slide="2"></div>
          {% endif %}
        </div>
      </div>
    </section>
    
    <!-- CTA Section -->
    <section id="portfolio-{{ section.id }}" class="cta-section">
      <h2 class="section-heading">What I'm Ready For</h2>
      <div class="portfolio-cta">
        <div class="portfolio-image">
          {% if section.settings.portfolio_image %}
            <img src="{{ section.settings.portfolio_image | img_url: '600x600' }}" alt="Portfolio Preview">
          {% else %}
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
          {% endif %}
        </div>
        <div class="portfolio-content">
          <p class="portfolio-text">{{ section.settings.portfolio_text }}</p>
          <button class="resume-btn" id="download-btn-{{ section.id }}">Download Portfolio</button>
        </div>
      </div>
    </section>
    
    <!-- Social Media Section -->
    <section id="social-{{ section.id }}" class="social-section">
      <h2 class="social-heading">Share My Profile</h2>
      <div class="social-icons">
        <div class="social-icon facebook" data-platform="facebook">
          <i class="fab fa-facebook-f"></i>
        </div>
        <div class="social-icon twitter" data-platform="twitter">
          <i class="fab fa-twitter"></i>
        </div>
        <div class="social-icon linkedin" data-platform="linkedin">
          <i class="fab fa-linkedin-in"></i>
        </div>
        <div class="social-icon instagram" data-platform="instagram">
          <i class="fab fa-instagram"></i>
        </div>
        <div class="social-icon whatsapp" data-platform="whatsapp">
          <i class="fab fa-whatsapp"></i>
        </div>
      </div>
    </section>
    
    <!-- Footer -->
    <footer class="site-footer">
      <p>Page built & gifted by a <a href="#" class="footer-link">Shopify Partner</a></p>
    </footer>
  </div>
  
  <!-- PDF Download Button -->
  <div class="pdf-download" id="pdf-download-{{ section.id }}" title="Download as PDF">
    <i class="fas fa-file-pdf"></i>
  </div>
</div>

{% schema %}
{
  "name": "Portfolio",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Student Information"
    },
    {
      "type": "text",
      "id": "student_name",
      "label": "Student Name",
      "default": "Aarav Mehta"
    },
    {
      "type": "text",
      "id": "student_role",
      "label": "Student Role",
      "default": "Shopify Developer Intern"
    },
    {
      "type": "image_picker",
      "id": "student_image",
      "label": "Student Image"
    },
    {
      "type": "text",
      "id": "certification",
      "label": "Certification",
      "default": "Certified Shopify Training – BOOST STAR Experts"
    },
    {
      "type": "text",
      "id": "internship_dates",
      "label": "Internship Dates",
      "default": "June 2025 – August 2025"
    },
    {
      "type": "header",
      "content": "Contact Information"
    },
    {
      "type": "text",
      "id": "phone",
      "label": "Phone",
      "default": "999-999-000"
    },
    {
      "type": "text",
      "id": "location",
      "label": "Location",
      "default": "Bengaluru"
    },
    {
      "type": "text",
      "id": "email",
      "label": "Email",
      "default": "aaravmehta88@gmail.com"
    },
    {
      "type": "header",
      "content": "About Section"
    },
    {
      "type": "richtext",
