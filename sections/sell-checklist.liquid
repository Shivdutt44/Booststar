<script>
  // Testimonials Carousel
  document.addEventListener('DOMContentLoaded', function() {
    const container = document.getElementById('testimonialsContainer');
    const testimonials = document.querySelectorAll('.testimonial-card');
    const dots = document.querySelectorAll('.dot');
    const prevBtn = document.getElementById('prevBtn');
    const nextBtn = document.getElementById('nextBtn');
    
    if (testimonials.length === 0) return; // Exit if no testimonials
    
    let currentIndex = 0;
    let cardWidth;
    let visibleCards;
    let maxIndex;
    let containerWidth;
    let autoRotateInterval;
    
    // Calculate dimensions based on screen size
    function calculateDimensions() {
      // Get container width
      containerWidth = container.parentElement.offsetWidth;
      
      // Determine number of visible cards based on screen width
      if (window.innerWidth >= 992) {
        visibleCards = 3;
      } else if (window.innerWidth >= 768) {
        visibleCards = 2;
      } else {
        visibleCards = 1;
      }
      
      // Calculate maximum index
      maxIndex = Math.max(0, testimonials.length - visibleCards);
      
      // Get the width of a single card including margin
      if (testimonials.length > 0) {
        const firstCard = testimonials[0];
        const cardStyle = window.getComputedStyle(firstCard);
        cardWidth = firstCard.offsetWidth + parseInt(cardStyle.marginRight) + parseInt(cardStyle.marginLeft);
      }
      
      // Adjust current index if it's beyond the new max index
      if (currentIndex > maxIndex) {
        currentIndex = maxIndex;
      }
      
      // Update carousel
      updateCarousel();
    }
    
    // Update carousel position
    function updateCarousel() {
      // Calculate the translateX value
      const translateX = -currentIndex * cardWidth;
      container.style.transform = `translateX(${translateX}px)`;
      
      // Update dots
      dots.forEach((dot, index) => {
        dot.classList.toggle('active', index === currentIndex);
      });
      
      // Update navigation buttons
      prevBtn.disabled = currentIndex === 0;
      nextBtn.disabled = currentIndex >= maxIndex;
      
      // Show/hide navigation if there's nothing to scroll
      if (testimonials.length <= visibleCards) {
        prevBtn.style.display = 'none';
        nextBtn.style.display = 'none';
      } else {
        prevBtn.style.display = 'flex';
        nextBtn.style.display = 'flex';
      }
    }
    
    // Move to specific testimonial
    function goToTestimonial(index) {
      currentIndex = Math.max(0, Math.min(index, maxIndex));
      updateCarousel();
    }
    
    // Next testimonial
    function nextTestimonial() {
      if (currentIndex < maxIndex) {
        goToTestimonial(currentIndex + 1);
      } else {
        // Loop back to beginning
        goToTestimonial(0);
      }
    }
    
    // Previous testimonial
    function prevTestimonial() {
      if (currentIndex > 0) {
        goToTestimonial(currentIndex - 1);
      } else {
        // Loop to end
        goToTestimonial(maxIndex);
      }
    }
    
    // Event listeners
    prevBtn.addEventListener('click', prevTestimonial);
    nextBtn.addEventListener('click', nextTestimonial);
    
    dots.forEach((dot, index) => {
      dot.addEventListener('click', () => goToTestimonial(index));
    });
    
    // Handle window resize with debounce
    let resizeTimeout;
    window.addEventListener('resize', () => {
      clearTimeout(resizeTimeout);
      resizeTimeout = setTimeout(() => {
        calculateDimensions();
      }, 200);
    });
    
    // Auto-rotate testimonials
    function startAutoRotate() {
      // Only auto-rotate if there are more testimonials than visible cards
      if (testimonials.length > visibleCards) {
        autoRotateInterval = setInterval(nextTestimonial, 5000);
      }
    }
    
    function stopAutoRotate() {
      clearInterval(autoRotateInterval);
    }
    
    // Start auto-rotate
    startAutoRotate();
    
    // Pause auto-rotation on hover
    const carousel = document.querySelector('.testimonials-carousel');
    carousel.addEventListener('mouseenter', () => {
      stopAutoRotate();
    });
    
    carousel.addEventListener('mouseleave', () => {
      startAutoRotate();
    });
    
    // Touch events for mobile swipe
    let touchStartX = 0;
    let touchEndX = 0;
    
    container.addEventListener('touchstart', (e) => {
      touchStartX = e.changedTouches[0].screenX;
    }, { passive: true });
    
    container.addEventListener('touchend', (e) => {
      touchEndX = e.changedTouches[0].screenX;
      handleSwipe();
    }, { passive: true });
    
    function handleSwipe() {
      const swipeThreshold = 50;
      const diff = touchStartX - touchEndX;
      
      if (Math.abs(diff) > swipeThreshold) {
        if (diff > 0) {
          // Swipe left
          nextTestimonial();
        } else {
          // Swipe right
          prevTestimonial();
        }
      }
    }
    
    // Initialize
    calculateDimensions();
    
