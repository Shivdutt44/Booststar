        .watch-btn i {
            margin-left: 8px;
        }

        .scroll-btn {
            background-color: var(--black);
            color: var(--white);
            position: relative;
            overflow: hidden;
            width: 50px;
            height: 50px;
            border-radius: 50%;
            justify-content: center;
        }

        .scroll-btn::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 0;
            height: 0;
            background-color: var(--primary-green);
            border-radius: 50%;
            transform: translate(-50%, -50%);
            transition: width 0.6s, height 0.6s;
        }

        .scroll-btn:hover::before {
            width: 100px;
            height: 100px;
        }

        .scroll-btn:hover {
            color: var(--white);
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
        }

        .scroll-btn i {
            animation: bounce 1s infinite;
            position: relative;
            z-index: 1;
        }

        @keyframes bounce {
            0%, 100% {
                transform: translateY(0);
            }
            50% {
                transform: translateY(5px);
            }
        }

        /* Divider Section */
        .divider {
            height: 120px;
            background: linear-gradient(135deg, var(--primary-green) 0%, var(--dark-green) 100%);
            position: relative;
            overflow: hidden;
            clip-path: polygon(0 0, 100% 0, 100% 75%, 0 100%);
        }

        .divider::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.4), transparent);
            animation: shimmer 2s infinite;
        }

        @keyframes shimmer {
            0% {
                left: -100%;
            }
            100% {
                left: 100%;
            }
        }

        /* Divider Shapes */
        .divider-shape {
            position: absolute;
            bottom: 0;
            width: 100%;
            height: 30px;
            background: var(--white);
            clip-path: polygon(0 20px, 100% 0, 100% 100%, 0 100%);
        }

        /* Our Story Section */
        .our-story {
            padding: 80px 20px;
            position: relative;
            z-index: 1;
            background-image: url('https://picsum.photos/seed/story-bg/1920/800.jpg');
            background-size: cover;
            background-position: center;
            width: 100%;
        }

        .our-story .bg-element {
            opacity: 0.05;
        }

        .section-title {
            text-align: center;
