 <style>
        :root {
            --primary-green: #7BAE5F;
            --dark-green: #5a8a44;
            --black: #000;
            --white: #fff;
            --light-gray: #f5f5f5;
            --text-gray: #333;
            --beige: #f0e6d2;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Lato', sans-serif;
            color: var(--text-gray);
            line-height: 1.6;
            overflow-x: hidden;
            background-color: var(--white);
        }

        h1, h2, h3, h4 {
            font-family: 'Playfair Display', serif;
            font-weight: 700;
        }

        /* Brand Elements - CSS/SVG Animations */
        .brand-element {
            position: absolute;
            z-index: 10;
            pointer-events: none;
        }

        /* Top Left Brand Element */
        .brand-element.top-left {
            top: 20px;
            left: 20px;
            width: 60px;
            height: 60px;
            animation: rotate 10s linear infinite;
        }

        /* Animated Circle Pattern */
        .circle-pattern {
            width: 60px;
            height: 60px;
            position: relative;
        }

        .circle-pattern::before,
        .circle-pattern::after {
            content: '';
            position: absolute;
            border-radius: 50%;
            background-color: var(--primary-green);
            opacity: 0.3;
        }

        .circle-pattern::before {
            width: 100%;
            height: 100%;
            animation: pulse 2s ease-in-out infinite;
        }

        .circle-pattern::after {
            width: 70%;
            height: 70%;
            top: 15%;
            left: 15%;
            background-color: var(--dark-green);
            animation: pulse 2s ease-in-out infinite 0.5s;
        }

        /* Diagonal Stripes Pattern */
        .diagonal-stripes {
            width: 80px;
            height: 80px;
            background: repeating-linear-gradient(
                45deg,
                var(--primary-green),
                var(--primary-green) 2px,
                transparent 2px,
                transparent 8px
            );
            opacity: 0.3;
            animation: float 8s ease-in-out infinite;
        }

        /* Dots Pattern */
        .dots-pattern {
            width: 70px;
            height: 70px;
            background-image: radial-gradient(var(--primary-green) 2px, transparent 2px);
            background-size: 15px 15px;
            opacity: 0.3;
            animation: float 7s ease-in-out infinite 1s;
        }

        /* Triangle Pattern */
        .triangle-pattern {
            width: 0;
            height: 0;
            border-left: 40px solid transparent;
            border-right: 40px solid transparent;
            border-bottom: 70px solid var(--primary-green);
            opacity: 0.3;
            animation: float 9s ease-in-out infinite 2s;
        }

        /* Wave Pattern */
        .wave-pattern {
            width: 100px;
            height: 50px;
            position: relative;
            overflow: hidden;
        }

        .wave-pattern::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 200%;
            height: 100%;
            background: repeating-linear-gradient(
                90deg,
                transparent,
                transparent 10px,
                var(--primary-green) 10px,
                var(--primary-green) 20px
            );
            opacity: 0.3;
            animation: waveMove 3s linear infinite;
        }

        @keyframes waveMove {
            0% {
                transform: translateX(0);
            }
            100% {
                transform: translateX(-50%);
            }
        }

        /* Star Pattern */
        .star-pattern {
            width: 60px;
            height: 60px;
            position: relative;
        }

        .star-pattern::before {
            content: '★';
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            font-size: 60px;
            color: var(--primary-green);
            opacity: 0.3;
            animation: starPulse 2s ease-in-out infinite;
        }

        @keyframes starPulse {
            0%, 100% {
                transform: translate(-50%, -50%) scale(1);
            }
            50% {
                transform: translate(-50%, -50%) scale(1.2);
            }
        }

        @keyframes rotate {
            0% {
                transform: rotate(0deg);
            }
            100% {
                transform: rotate(360deg);
            }
        }

        @keyframes pulse {
            0%, 100% {
                transform: scale(1);
            }
            50% {
                transform: scale(1.1);
            }
        }

        @keyframes float {
            0%, 100% {
                transform: translateY(0) rotate(0deg);
            }
            50% {
                transform: translateY(-15px) rotate(10deg);
            }
        }

        /* Section Background Elements */
        .section {
            position: relative;
            overflow: hidden;
        }

        .bg-element {
            position: absolute;
            opacity: 0.2;
            z-index: 0;
            pointer-events: none;
        }

        .bg-element-1 {
            top: 10%;
            left: 5%;
            animation: float 8s ease-in-out infinite;
            z-index:-1;
        }

        .bg-element-2 {
            bottom: 15%;
            right: 8%;
            animation: float 7s ease-in-out infinite 1s;
            z-index:-1;
        }

        .bg-element-3 {
            top: 50%;
            left: 50%;
            transform: rotate(45deg);
            z-index:-1;
            /* animation: float 9s ease-in-out infinite 2s; */
        }

        /* Agency Logo */
        .agency-logo {
            position: fixed;
            bottom: 20px;
            left: 20px;
            width: 60px;
            height: 60px;
            z-index: 100;
            opacity: 0.9;
            transition: opacity 0.3s ease;
        }

        .agency-logo:hover {
            opacity: 1;
        }

        /* Animated Hamburger Menu */
        .hamburger-container {
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 1000;
            width: 50px;
            height: 50px;
            display: flex;
            justify-content: center;
            align-items: center;
            cursor: pointer;
            animation: hamburgerPulse 2s infinite;
        }

        @keyframes hamburgerPulse {
            0% {
                background-color: rgba(0, 0, 0, 0.8);
                border-radius: 50%;
                transform: scale(1);
            }
            50% {
                background-color: var(--primary-green);
                border-radius: 50%;
                transform: scale(1.1);
            }
            100% {
                background-color: rgba(0, 0, 0, 0.8);
                border-radius: 50%;
                transform: scale(1);
            }
        }

        .hamburger {
            display: block;
            color: var(--white);
        }

        .hamburger i {
            font-size: 24px;
            animation: hamburgerIcon 1.5s infinite;
        }

        @keyframes hamburgerIcon {
            0%, 100% {
                transform: rotate(0deg);
            }
            25% {
                transform: rotate(10deg);
            }
            75% {
                transform: rotate(-10deg);
            }
        }

        /* Mobile Menu */
        .mobile-menu {
            position: fixed;
            top: 0;
            right: -100%;
            width: 80%;
            max-width: 300px;
            height: 100vh;
            background-color: rgba(0, 0, 0, 0.95);
            z-index: 1001;
            padding: 80px 30px 30px;
            transition: right 0.3s ease;
            overflow-y: auto;
        }

        .mobile-menu.active {
            right: 0;
        }

        .close-menu {
            position: absolute;
            top: 20px;
            right: 20px;
            cursor: pointer;
            color: var(--white);
            font-size: 24px;
            transition: transform 0.3s ease;
        }

        .close-menu:hover {
            transform: rotate(90deg);
        }

        .mobile-menu ul {
            list-style: none;
        }

        .mobile-menu ul li {
            margin-bottom: 20px;
            position: relative;
            overflow: hidden;
        }

        .mobile-menu ul li a {
            text-decoration: none;
            color: var(--white);
            font-weight: 600;
            font-size: 18px;
            display: flex;
            align-items: center;
            padding: 10px 0;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            transition: all 0.3s ease;
        }

        .mobile-menu ul li a i {
            margin-right: 15px;
            font-size: 20px;
            transition: transform 0.3s ease;
        }

        .mobile-menu ul li a:hover i {
            transform: translateX(5px);
        }

        .mobile-menu ul li a:hover {
            color: var(--primary-green);
            padding-left: 10px;
        }

        /* Animated elements in hamburger menu */
        .menu-element {
            position: absolute;
            opacity: 0.2;
            z-index: -1;
        }

        .menu-element-1 {
            top: 20%;
            left: 10%;
            animation: menuFloat 5s ease-in-out infinite;
        }

        .menu-element-2 {
            bottom: 30%;
            right: 15%;
            animation: menuFloat 7s ease-in-out infinite 1s;
        }

        @keyframes menuFloat {
            0%, 100% {
                transform: translateY(0) rotate(0deg);
            }
            50% {
                transform: translateY(-10px) rotate(15deg);
            }
        }

        /* Scroll Progress Bar */
        .progress-container {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 5px;
            background-color: rgba(255, 255, 255, 0.3);
            z-index: 1000;
        }

        .progress-bar {
            height: 5px;
            background-color: var(--primary-green);
            width: 0%;
            transition: width 0.3s ease;
        }

        /* Main Content */
        main {
            padding-top: 20px;
        }

        /* Hero Section */
        .hero {
            padding: 60px 20px;
            max-width: 1200px;
            margin: 0 auto;
            display: flex;
            z-index:0;
            flex-direction: column;
            align-items: center;
        }

        .hero-content {
            display: flex;
            flex-direction: column;
            align-items: center;
            width: 100%;
            position: relative;
            z-index: 1;
        }

        .hero-image {
            width: 100%;
            max-width: 500px;
            height: 500px;
            border-radius: 20px;
            overflow: hidden;
            position: relative;
            margin-bottom: 40px;
