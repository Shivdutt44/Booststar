<script>
  // Mobile Menu Toggle
  const hamburger = document.querySelector('.hamburger');
  const mobileMenu = document.querySelector('.mobile-menu');
  const closeMenu = document.querySelector('.close-menu');
  
  hamburger.addEventListener('click', () => {
    mobileMenu.classList.add('active');
  });
  
  closeMenu.addEventListener('click', () => {
    mobileMenu.classList.remove('active');
  });
  
  // Close mobile menu when clicking on a link
  const mobileLinks = document.querySelectorAll('.mobile-menu a');
  mobileLinks.forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu.classList.remove('active');
    });
  });
  
  // Read More Button in Our Story Section
  const storyReadMoreBtn = document.querySelector('.our-story .read-more-btn');
  const storyText = document.querySelector('.story-text');
  const moreContent = document.querySelector('.more-content');
  
  storyReadMoreBtn.addEventListener('click', () => {
    if (storyText.classList.contains('collapsed')) {
      storyText.classList.remove('collapsed');
      storyText.classList.add('expanded');
      storyReadMoreBtn.textContent = '{{ section.settings.read_less_text }}';
      moreContent.style.display = 'block';
    } else {
      storyText.classList.remove('expanded');
      storyText.classList.add('collapsed');
      storyReadMoreBtn.textContent = '{{ section.settings.read_more_text }}';
      moreContent.style.display = 'none';
    }
  });
  
  // Initially hide more content
  moreContent.style.display = 'none';
  
  // Accordion with Image Change and Hover Effect
  const accordionItems = document.querySelectorAll('.accordion-item');
  const founderImage = document.querySelector('#founder-image img');
  const journeyImage = document.querySelector('#journey-image img');
  
  // Preload images for faster switching
  function preloadImage(src) {
    const img = new Image();
    img.src = src;
  }
  
  // Preload all accordion images
  accordionItems.forEach(item => {
    const imageSrc = item.getAttribute('data-image');
    preloadImage(imageSrc);
  });
  
  accordionItems.forEach(item => {
    const header = item.querySelector('.accordion-header');
    const imageSrc = item.getAttribute('data-image');
    let hoverTimeout;
    
    // Click event
    header.addEventListener('click', () => {
      // Close all other accordion items
      accordionItems.forEach(otherItem => {
        if (otherItem !== item && otherItem.classList.contains('active')) {
          otherItem.classList.remove('active');
        }
      });
      
      // Toggle current item
      item.classList.toggle('active');
      
      // Change image if this item is being opened
      if (item.classList.contains('active')) {
        if (item.closest('.about-founder')) {
          founderImage.src = imageSrc;
        } else if (item.closest('.brand-journey')) {
          journeyImage.src = imageSrc;
        }
      }
    });
    
    // Hover event for quick image change
    header.addEventListener('mouseenter', () => {
      // Only change image if this item is not already active
      if (!item.classList.contains('active')) {
        // Clear any existing timeout
        if (hoverTimeout) clearTimeout(hoverTimeout);
        
        // Set a new timeout for faster image change
        hoverTimeout = setTimeout(() => {
          if (item.closest('.about-founder')) {
            founderImage.src = imageSrc;
          } else if (item.closest('.brand-journey')) {
            journeyImage.src = imageSrc;
          }
        }, 100); // Reduced timeout for faster response
      }
    });
    
    header.addEventListener('mouseleave', () => {
      // Clear the timeout if mouse leaves before it fires
      if (hoverTimeout) clearTimeout(hoverTimeout);
      
      // If no item is active, revert to the first item's image
      const activeItem = item.closest('.section').querySelector('.accordion-item.active');
      if (!activeItem) {
        const firstItem = item.closest('.section').querySelector('.accordion-item');
        const firstItemImage = firstItem.getAttribute('data-image');
        
        if (item.closest('.about-founder')) {
          founderImage.src = firstItemImage;
        } else if (item.closest('.brand-journey')) {
          journeyImage.src = firstItemImage;
        }
      }
    });
  });
  
  // Video Modal
  const watchBtns = document.querySelectorAll('.watch-btn');
  const videoModal = document.querySelector('.video-modal');
  const modalClose = document.querySelector('.modal-close');
  const modalVideo = document.querySelector('.modal-video iframe');
  
  watchBtns.forEach(btn => {
    btn.addEventListener('click', () => {
      // Replace with actual video ID from section settings
      modalVideo.src = '{{ section.settings.video_url }}';
      videoModal.classList.add('active');
    });
  });
  
  modalClose.addEventListener('click', () => {
    videoModal.classList.remove('active');
    modalVideo.src = '';
  });
  
  // Close modal when clicking outside the content
  videoModal.addEventListener('click', (e) => {
    if (e.target === videoModal) {
      videoModal.classList.remove('active');
      modalVideo.src = '';
    }
  });
  
  // Scroll Progress Bar
  const progressBar = document.querySelector('.progress-bar');
  window.addEventListener('scroll', () => {
    const scrollHeight = document.documentElement.scrollHeight - window.innerHeight;
    const scrollPosition = window.scrollY;
    const scrollPercentage = (scrollPosition / scrollHeight) * 100;
    
    progressBar.style.width = `${scrollPercentage}%`;
  });
  
  // Lazy Loading Images
  const lazyImages = document.querySelectorAll('.lazy-load');
  const imageObserver = new IntersectionObserver((entries, observer) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        const img = entry.target;
        img.classList.add('loaded');
        observer.unobserve(img);
      }
    });
  });
  
  lazyImages.forEach(img => {
    imageObserver.observe(img);
  });
  
  // Smooth Scrolling for Navigation Links
  const navLinks = document.querySelectorAll('a[href^="#"]');
  
  navLinks.forEach(link => {
    link.addEventListener('click', (e) => {
      e.preventDefault();
      
      const targetId = link.getAttribute('href');
      const targetElement = document.querySelector(targetId);
      
      if (targetElement) {
        window.scrollTo({
          top: targetElement.offsetTop - 60, // Account for fixed header
          behavior: 'smooth'
        });
      }
    });
  });
  
  // Copy URL Button
  function setupCopyUrlButton(btnId) {
    const copyUrlBtn = document.getElementById(btnId);
    
    copyUrlBtn.addEventListener('click', (e) => {
      e.preventDefault();
      
      // Get the current page URL
      const url = window.location.href;
      
      // Copy to clipboard
      navigator.clipboard.writeText(url).then(() => {
        // Show a temporary tooltip or notification
        const originalTitle = copyUrlBtn.getAttribute('aria-label');
        copyUrlBtn.setAttribute('aria-label', 'Copied!');
        
        // Change the icon temporarily
        const originalIcon = copyUrlBtn.innerHTML;
        copyUrlBtn.innerHTML = '<i class="fas fa-check"></i>';
        
        // Reset after 2 seconds
        setTimeout(() => {
          copyUrlBtn.setAttribute('aria-label', originalTitle);
          copyUrlBtn.innerHTML = originalIcon;
        }, 2000);
      }).catch(err => {
        console.error('Failed to copy URL: ', err);
      });
    });
  }
  
  // Setup both copy URL buttons
  setupCopyUrlButton('copy-url-btn');
  setupCopyUrlButton('copy-url-btn-footer');
  
  // Social Media Sharing Functions
  function shareOnFacebook() {
    const url = window.location.href;
    window.open(`https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(url)}`, '_blank');
  }
  
  function shareOnInstagram() {
    // Instagram doesn't allow direct URL sharing, so we copy the URL to clipboard
    const url = window.location.href;
    navigator.clipboard.writeText(url).then(() => {
      alert('URL copied to clipboard! You can now paste it in your Instagram post or story.');
    });
  }
  
  function shareOnTwitter() {
    const url = window.location.href;
    const text = '{{ section.settings.social_share_text }}';
    window.open(`https://twitter.com/intent/tweet?text=${encodeURIComponent(text)}&url=${encodeURIComponent(url)}`, '_blank');
  }
  
  function shareOnPinterest() {
    const url = window.location.href;
    const description = '{{ section.settings.social_share_text }}';
    window.open(`https://pinterest.com/pin/create/button/?url=${encodeURIComponent(url)}&description=${encodeURIComponent(description)}`, '_blank');
  }
  
  function shareOnYouTube() {
    // YouTube doesn't have a direct sharing URL, so we copy the URL to clipboard
    const url = window.location.href;
    navigator.clipboard.writeText(url).then(() => {
      alert('URL copied to clipboard! You can now paste it in your YouTube video description.');
    });
  }
  
  // Error handling for unhandled promise rejections
  window.addEventListener('unhandledrejection', event => {
    console.error('Unhandled promise rejection:', event.reason);
  });
  
  // Error handling for runtime errors
  window.addEventListener('error', event => {
    console.error('Runtime error:', event.message);
  });
</script>

