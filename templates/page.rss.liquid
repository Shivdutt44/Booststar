{% layout none %}<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>{{ shop.name }} - RSS Feed</title>
    <link>{{ shop.url }}</link>
    <description>Latest updates from {{ shop.name }}</description>
    
    <!-- Atom link element to indicate the self URL -->
    <atom:link href="{{ shop.url }}/pages/rss" rel="self" type="application/rss+xml" />
    
    <language>en-us</language>
    
    {% for article in blogs['ecommerce'].articles %}
    <item>
      <title>{{ article.title }}</title>
      <link>{{ shop.url }}{{ article.url }}</link>
      <description>{{ article.excerpt | strip_html | truncate: 200 }}</description>
      <pubDate>{{ article.published_at | date: "%a, %d %b %Y %H:%M:%S %z" }}</pubDate>
      <guid isPermaLink="true">{{ shop.url }}{{ article.url }}</guid>
    </item>
    {% endfor %}
  </channel>
</rss>

